<div class="row noMarginBottom" id="articleBigCart-{{article.id}}">
    <div class="col s12">
        <div class="card horizontal maxHeightCardItemsBig">
            <div class="card-image imgCartItem flexIt">
                <img src="{{ baseUrl ~ 'img/t-shirt.png' }}" alt="unicorn t-shirt">
            </div>
            <div class="card-stacked flexIt">
                <div class="card-content tenPadding">
                    <h4 class="">{{ article.name }}</h4>
                    <p class="miniMarginArround">{{ article.description|striptags|slice(0, 420) ~ '...'}}</p>
                    {% if article.size != "" %}
                        <p class="miniMarginArround">Size : {{ article.size|upper }}</p>
                    {% endif %} 
                    <p class="miniMarginArround">Color : Black</p>
                    <p class="miniMarginArround">Quantity : 1.</p>
                    <p class="right pinkMaterializeColor priceBigCard">{{ "%.2f"|format(article.priceHT) }}â‚¬</p>
                    <i class="material-icons tiny icon_style_black deleteCartArticle" data-articleid="{{article.id}}" data-pathfordelete="{{path_for('deleteFromCart', { 'idArticle': article.id })}}">clear</i>
                </div>
            </div>
        </div>
    </div>
</div>